datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model UserProfile {
  id           String   @id
  createdAt    DateTime @default(now())
  picture      String?
  score        Int      @default(0)
  attemptsLeft Int      @default(3)
  lastLogin    DateTime
  lastReset    DateTime @default(now())
  email        String   @unique
}

model Game {
  id        String   @id @default(uuid())
  word      String
  initial   String
  createdAt DateTime @default(now())
}
